# change prefix
set-option -g prefix C-x
bind C-x send-prefix
unbind C-b

# status

set -g display-time 3000

set-option -g default-terminal screen-256color
set -g terminal-overrides 'xterm:colors=256'

# command/message line colors
set -g message-style fg=black,bg=white,bright
set -g pane-border-style fg=gray
set -g pane-active-border-style fg=gray

# set -g status-style fg=black,bg=white
set -g status-bg colour241
set -g status-fg white

set -g window-style 'fg=colour0,bg=colour254'
set -g window-active-style 'fg=colour0,bg=colour15'

# select pane on mouse
set-option -g mouse on

# sync clipboard
# for linux
if "which xclip" "bind -T copy-mode M-w send -X copy-pipe-and-cancel 'xclip -i -selection clipboard'"
if "which xclip" "bind -n C-y run 'tmux set-buffer -- \"$(xclip -o -selection clipboard)\"; tmux paste-buffer'"

#for mac
if "which pbcopy" "bind -Tcopy-mode M-w send -X copy-pipe-and-cancel 'pbcopy'"
if "which pbpaste" "bind -n C-y run 'tmux set-buffer -- \"$(pbpaste)\"; tmux paste-buffer'"

# split
bind h split-window -h
bind v split-window

