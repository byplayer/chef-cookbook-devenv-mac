[alias]
	co = checkout
	br = branch
	mg = merge
	stat = status
	st = status
	sw = switch
	ds = diff --stat
	sm = submodule
	ci = commit
	cia = commit --amend
	chp = cherry-pick
	l = log --color
	lo = log --oneline --color
	lg = log --graph --pretty=format:'%C(yellow)%h%C(green)%d%Creset %s %Cblue[%ad]%C(bold blue)<<%= '%' %>an>%Creset' --abbrev-commit --date=short --branches --color
	lga = log --graph --pretty=format:'%C(yellow)%h%C(green)%d%Creset %s %Cblue[%ad]%C(bold blue)<<%= '%' %>an>%Creset' --abbrev-commit --date=short --branches --all --color
	dt = difftool
	dc = diff --check
	dname = diff --name-only
	dns = diff --name-status
	mt = mergetool
	d = diff
	dw = diff --color-words
	top = rev-parse --show-toplevel
	tags = tag -s
	parent = "!git show-branch | grep '*' | grep -v \"$(git rev-parse --abbrev-ref HEAD)\" | head -n1 | sed 's/.*\\[\\(.*\\)\\].*/\\1/' | sed 's/[\\^~].*//' #"
[alias "r"]
	s = remote show
	p = remote prune
	rb = remove-remote-branch
[alias "r.s"]
	o = remote show origin
[alias "r.p"]
	o = remote prune origin
[alias "r.rb"]
	o = remove-remote-branch origin
[push]
	default = simple
[color]
	ui = auto
[credential]
	helper = store
[core]
	whitespace = cr-at-eol
	pager = delta --tabs 4
	hooksPath = git_hooks
[user]
	name = <%= @git_user_name %>
	email = <%= @git_user_email %>
	signingkey = <%= @git_signing_key %>

[pager]
	log = delta | emojify | less

[diff]
	colorMoved = default
	tool = meld
	compactionHeuristic = true

[difftool]
	prompt = false

[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = meld
    keepBackup = false

[mergetool "meld"]
	cmd = meld "$LOCAL" "$BASE" "$REMOTE"
	keepTemporaries = false
	trustExitCode = false
	keepBackup = false

[gpg]
	program = gpg
[commit]
	gpgsign = true
	template = ~/.config/git/commit_template.txt
[pull]
	rebase = false
[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true    # use n and N to move between diff sections
	light = true      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
